<div class="container edit" id="<%= id %>">
  <div class="row">
    <div class="col-md-6">
      <label>Manage your Device </label>
      <form>
        <div class="form-group">
          <label for="latitude">Latitude</label>
          <input type="text" name="latitude" value="0.0" id="latitude">
        </div>
        <div class="form-group">
          <label for="longitude">Longitude</label>
          <input type="text" name="longitude" value="0.0" id="longitude">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input type="text" name="description" value="Enter a description of your device" id="description">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" value="" />
        </div>
        <div class="form-group">
          <label for="arduino">Arduino Token</label>
          <input type="text" name="arduino" value="Enter Arduino Token" id="arduino">
        </div>
        <input type="submit" class="edit-submit" value="Submit">
      </form>
    </div>
    <div class="minimap col-md-6">
      <label>Click on the map to add your location</label>
      <div id="minimap" style="position:relative;top:0px;height:300px;right:20px" ></div>
    </div>
  </div>
</div>